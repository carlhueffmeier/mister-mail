{
  "compilerOptions": {
    // Language features
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strict": true,
    // Build
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "noEmitOnError": true,
    "outDir": "lib",
    "lib": ["es2017"],
    // Modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "types"],
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "services/web-client",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
